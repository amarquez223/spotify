<div class="container">
	<div class="row">
		<div class="col-sm-2">
		<h1><%= @artist.name %></h1>
		<h3>Albums(<%= @artist.albums.count %>)</h3>
		</div>
		<div class="col-sm-2">
			<img class="img-responsive" src="<%= @artist.image_url %>" width= 280 height= 172>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<% @artist.albums.each do |album| %>
			<div class="col-sm-4">	
				<img class="img-responsive" src="<%= album.image_url %>">
				<h4><%= album.name %></h4>
				<h4><%= album.released_at %></h4>
			</div>
		<% end %>
		</div>
</div>